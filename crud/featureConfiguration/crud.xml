<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<crud>
    <allowHeaderAsQueryParameter>true</allowHeaderAsQueryParameter>
    <broadcastCreate>false</broadcastCreate>
    <broadcastUpdate>false</broadcastUpdate>
    <coreType>nabu.frameworks.features.database.types.featureConfiguration</coreType>
    <createPermission>feature.manage</createPermission>
    <createRole>$user</createRole>
    <deletePermission>feature.manage</deletePermission>
    <deleteRole>$user</deleteRole>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>id</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <filters>
        <caseInsensitive>false</caseInsensitive>
        <key>featureArtifactId</key>
        <operator>=</operator>
        <or>false</or>
        <input>true</input>
        <vary>false</vary>
    </filters>
    <getPermission>feature.list</getPermission>
    <hooks>false</hooks>
    <listPermission>feature.list</listPermission>
    <listRole>$user</listRole>
    <provider>nabu.services.crud.provider.basic.provider</provider>
    <restLimitToUser>true</restLimitToUser>
    <updatePermission>feature.manage</updatePermission>
    <updateRole>$user</updateRole>
    <useExplicitLanguage>false</useExplicitLanguage>
    <useGlobalPermissionContext>true</useGlobalPermissionContext>
    <useLanguage>false</useLanguage>
    <useListOutputForCreate>true</useListOutputForCreate>
    <useListOutputForUpdate>true</useListOutputForUpdate>
    <useProjectAsPermissionContext>false</useProjectAsPermissionContext>
    <useServiceContextAsPermissionContext>false</useServiceContextAsPermissionContext>
    <useWebApplicationAsPermissionContext>false</useWebApplicationAsPermissionContext>
    <views>
        <broadcastCreate>false</broadcastCreate>
        <broadcastUpdate>false</broadcastUpdate>
        <filters>
            <caseInsensitive>false</caseInsensitive>
            <key>artifactId</key>
            <operator>=</operator>
            <or>false</or>
            <input>true</input>
            <vary>false</vary>
        </filters>
        <filters>
            <caseInsensitive>false</caseInsensitive>
            <key>condition</key>
            <operator>is not null</operator>
            <or>false</or>
            <input>false</input>
            <vary>false</vary>
        </filters>
        <foreignFields>
            <foreignName>featureArtifactId:artifactId</foreignName>
            <localName>artifactId</localName>
        </foreignFields>
        <foreignFields>
            <foreignName>featureDefinitionId:feature</foreignName>
            <localName>feature</localName>
        </foreignFields>
        <name>For Toggling</name>
        <type>LIST</type>
    </views>
</crud>
